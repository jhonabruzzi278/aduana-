<section class="my-6 bg-white p-4 rounded shadow">
  <h3 class="text-lg font-semibold mb-4">Documentación de Menores</h3>

  <form id="form-menor" class="space-y-4">
    <div class="flex items-center gap-2">
      <input id="es-menor" type="checkbox" class="h-5 w-5" />
      <label for="es-menor" class="font-medium">¿Eres menor de edad?</label>
    </div>

    <div id="datos-menor" class="hidden space-y-4 mt-4">
      <div>
        <label for="nombre-menor" class="block font-medium">Nombre del menor</label>
        <input id="nombre-menor" type="text" class="w-full p-2 border border-gray-300 rounded" />
      </div>
      <div>
        <label for="responsable" class="block font-medium">Nombre del adulto responsable</label>
        <input id="responsable" type="text" class="w-full p-2 border border-gray-300 rounded" />
      </div>
      <div>
        <label for="archivo-doc" class="block font-medium">Cargar documento escaneado</label>
        <input id="archivo-doc" type="file" class="w-full border border-gray-300 rounded" />
      </div>
    </div>

    <button type="submit" class="bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-500">Enviar</button>
  </form>

  <p id="resultado-menor" class="mt-4 font-semibold"></p>
</section>

<script type="module">
  import { setupFormularioMenor } from "/src/scripts/formularioMenor.ts";
  setupFormularioMenor();
</script>

