const enviarFormulario = (event: Event) => {
  event.preventDefault();
  const form = event.target as HTMLFormElement;
  const nombre = (form.querySelector('#nombre') as HTMLInputElement).value;
  const documento = (form.querySelector('#documento') as HTMLInputElement).value;
  const nacionalidad = (form.querySelector('#nacionalidad') as HTMLInputElement).value;

  const resultado = document.getElementById('resultado-pasajero');
  if (nombre && documento && nacionalidad) {
    resultado!.textContent = `✅ Pasajero registrado: ${nombre} (${documento}, ${nacionalidad})`;
    resultado!.classList.remove("text-red-500");
    resultado!.classList.add("text-green-600");
    form.reset();
  } else {
    resultado!.textContent = "❌ Debes completar todos los campos.";
    resultado!.classList.remove("text-green-600");
    resultado!.classList.add("text-red-500");
  }
};
