      <label for="nacionalidad" class="block font-medium">Nacionalidad</label>
      <input id="nacionalidad" type="text" class="w-full p-2 border border-gray-300 rounded" />
    </div>
    <button type="submit" class="bg-blue-700 text-white px-4 py-2 rounded hover:bg-blue-600 w-full">
      Registrar ingreso
    </button>
  </form>
</section>


