<section class="my-6 bg-white p-4 rounded shadow">
  <h3 class="text-lg font-semibold mb-4">⚙️ Administración de Catálogos</h3>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <h4 class="font-medium mb-2">Tipos de Documento</h4>
      <ul class="list-disc pl-5 text-sm text-gray-700 mb-2">
        <li>Pasaporte</li>
        <li>Cédula de Identidad</li>
        <li>Permiso Notarial</li>
      </ul>
      <input type="text" placeholder="Nuevo tipo..." class="w-full p-2 border border-gray-300 rounded mb-2" />
      <button class="bg-green-600 text-white px-4 py-1 rounded hover:bg-green-500">Agregar</button>
    </div>
    <div>
      <h4 class="font-medium mb-2">Puestos Fronterizos</h4>
      <ul class="list-disc pl-5 text-sm text-gray-700 mb-2">
        <li>Los Libertadores</li>
        <li>Chacalluta</li>
        <li>Colchane</li>
      </ul>
      <input type="text" placeholder="Nuevo puesto..." class="w-full p-2 border border-gray-300 rounded mb-2" />
      <button class="bg-green-600 text-white px-4 py-1 rounded hover:bg-green-500">Agregar</button>
    </div>
  </div>
</section>
