<section class="my-6 bg-white p-4 rounded shadow">
  <h3 class="text-lg font-semibold text-blue-700 mb-4">Integración: Aduana Argentina</h3>
  <form id="form-aduana-arg" class="space-y-4">
    <input type="text" id="patente" class="w-full p-2 border border-gray-300 rounded" placeholder="Patente del vehículo" />
    <button type="submit" class="bg-orange-700 text-white px-4 py-2 rounded hover:bg-orange-600">Validar documento</button>
  </form>
  <p id="resultado-aduana" class="mt-4 font-semibold"></p>
</section>

<script type="module">
  
  window.addEventListener("DOMContentLoaded", () => {
   
    import("../scripts/formularioIntegracionAduanaArgentina.js")
      .then((module) => {
       
        if (module.setupIntegracionAduanaArgentina) {
          module.setupIntegracionAduanaArgentina();
        } else {
          console.warn("El módulo formularioIntegracionAduanaArgentina.js no exporta 'setupIntegracionAduanaArgentina'.");
        }
      })
      .catch((error) => {
        console.error("Error al cargar el script formularioIntegracionAduanaArgentina.js:", error);
      });
  });
</script>