<section class="my-6 bg-white p-4 rounded shadow">
  <h3 class="text-lg font-semibold text-blue-700 mb-4">Integración: Migraciones</h3>
  <form id="form-migraciones" class="space-y-4">
    <input type="text" id="nombre-migra" class="w-full p-2 border border-gray-300 rounded" placeholder="Nombre del pasajero" />
    <input type="text" id="nacionalidad-migra" class="w-full p-2 border border-gray-300 rounded" placeholder="Nacionalidad" />
    <button type="submit" class="bg-purple-700 text-white px-4 py-2 rounded hover:bg-purple-600">Validar cruce</button>
  </form>
  <p id="resultado-migraciones" class="mt-4 font-semibold"></p>
</section>

<script type="module">
  const form = document.getElementById("form-migraciones");
  const resultado = document.getElementById("resultado-migraciones");

  form?.addEventListener("submit", (e) => {
    e.preventDefault();
    const nombre = document.getElementById("nombre-migra").value.trim();
    const nac = document.getElementById("nacionalidad-migra").value.trim();
    if (!nombre || !nac) {
      resultado.textContent = "❌ Completa ambos campos.";
      resultado.className = "text-red-600";
      return;
    }

    const estados = ["✅ Cruce migratorio válido", "❌ Ingreso no registrado en Argentina"];
    resultado.textContent = estados[Math.floor(Math.random() * estados.length)];
    resultado.className = "text-purple-700 mt-4 font-semibold";
  });
</script>
