<section class="my-6 bg-white p-4 rounded shadow">
  <h3 class="text-lg font-semibold text-blue-700 mb-4">Integración: PDI</h3>
  <form id="form-pdi" class="space-y-4">
    <input type="text" id="doc-pdi" class="w-full p-2 border border-gray-300 rounded" placeholder="Documento del pasajero" />
    <button type="submit" class="bg-blue-700 text-white px-4 py-2 rounded hover:bg-blue-600">Verificar antecedentes</button>
  </form>
  <p id="resultado-pdi" class="mt-4 font-semibold"></p>
</section>

<script type="module">
  const form = document.getElementById("form-pdi");
  const resultado = document.getElementById("resultado-pdi");

  form?.addEventListener("submit", (e) => {
    e.preventDefault();
    const doc = document.getElementById("doc-pdi").value.trim();
    if (!doc) {
      resultado.textContent = "❌ Ingresa el documento del pasajero.";
      resultado.className = "text-red-600";
      return;
    }

    const estados = ["✅ Sin antecedentes", "❌ Alerta activa en PDI"];
    resultado.textContent = estados[Math.floor(Math.random() * estados.length)];
    resultado.className = "text-blue-700 mt-4 font-semibold";
  });
</script>
