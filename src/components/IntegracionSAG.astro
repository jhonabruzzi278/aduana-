<section class="my-6 bg-white p-4 rounded shadow">
  <h3 class="text-lg font-semibold mb-4">Integración: SAG - Declaración de Productos</h3>

  <form id="form-sag" class="space-y-4">
    <div>
      <label for="producto" class="block font-medium">Producto declarado</label>
      <input id="producto" type="text" class="w-full p-2 border border-gray-300 rounded" />
    </div>
    <div>
      <label for="origen" class="block font-medium">País de origen</label>
      <input id="origen" type="text" class="w-full p-2 border border-gray-300 rounded" />
    </div>
    <button type="submit" class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-500 w-full">
      Validar Producto
    </button>
  </form>
  <p id="resultado-sag" class="mt-4 font-semibold"></p> </section>


<script type="module">
  
  window.addEventListener("DOMContentLoaded", () => {
    
    import("../scripts/formularioIntegracionSAG.js")
      .then((module) => {
        
        if (module.setupIntegracionSAG) {
          module.setupIntegracionSAG();
        } else {
          console.warn("El módulo formularioIntegracionSAG.js no exporta 'setupIntegracionSAG'.");
        }
      })
      .catch((error) => {
        console.error("Error al cargar el script formularioIntegracionSAG.js:", error);
      });
  });
</script>