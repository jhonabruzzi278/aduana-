<section class="my-6 bg-white p-4 rounded shadow">
  <h3 class="text-lg font-semibold mb-4">Intervención Manual</h3>

  <form id="form-intervencion" class="space-y-4">
    <div>
      <label for="codigo-tramite" class="block font-medium">Código de trámite</label>
      <input id="codigo-tramite" type="text" class="w-full p-2 border border-gray-300 rounded" />
    </div>
    <div>
      <label for="accion" class="block font-medium">Justificación / Acción tomada</label>
      <textarea id="accion" rows="3" class="w-full p-2 border border-gray-300 rounded"></textarea>
    </div>
    <button type="submit" class="bg-purple-700 text-white px-4 py-2 rounded hover:bg-purple-600 w-full">
      Registrar intervención
    </button>
  </form>
</section>


<script type="module">
 
  window.addEventListener("DOMContentLoaded", () => {
   
    import("../scripts/formularioIntervencionManual.js")
      .then((module) => {
        if (module.setupIntervencionManual) {
          module.setupIntervencionManual();
        } else {
          console.warn("El módulo formularioIntervencionManual.js no exporta 'setupIntervencionManual'.");
        }
      })
      .catch((error) => {
        console.error("Error al cargar el script formularioIntervencionManual.js:", error);
      });
  });
</script>