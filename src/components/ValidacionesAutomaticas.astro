<section class="my-6 bg-white p-4 rounded shadow">
  <h3 class="text-lg font-semibold mb-4">🧠 Validaciones Automáticas</h3>

  <form id="form-validacion" class="space-y-4">
    <div>
      <label for="codigo-validacion" class="block font-medium">Código de Trámite o Documento</label>
      <input id="codigo-validacion" type="text" class="w-full p-2 border border-gray-300 rounded" />
    </div>
    <button type="submit" class="bg-blue-700 text-white px-4 py-2 rounded hover:bg-blue-600">
      Ejecutar Validación
    </button>
  </form>

  <div id="resultado-validacion" class="mt-6 text-lg font-semibold"></div>
</section>


<script type="module">
  // Espera a que el DOM esté completamente cargado antes de intentar importar el script
  window.addEventListener("DOMContentLoaded", () => {
    // Importación dinámica del script.
    // La ruta es relativa al componente actual y apunta al archivo .js que Astro generará.
    import("../scripts/formularioValidacionesAutomaticas.js")
      .then((module) => {
        // Asegúrate de que el módulo exporte la función 'setupValidacionesAutomaticas'
        if (module.setupValidacionesAutomaticas) {
          module.setupValidacionesAutomaticas();
        } else {
          console.warn("El módulo formularioValidacionesAutomaticas.js no exporta 'setupValidacionesAutomaticas'.");
        }
      })
      .catch((error) => {
        console.error("Error al cargar el script formularioValidacionesAutomaticas.js:", error);
      });
  });
</script>
