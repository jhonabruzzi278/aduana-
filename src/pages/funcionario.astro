---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Panel del Funcionario">
  <section class="mb-8">
    <h2 class="text-3xl font-bold text-blue-900 mb-2">Bienvenido Funcionario</h2>
    <p class="text-gray-700">Registra y valida toda la información de ingreso y salida.</p>
  </section>

  <section class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
    <!-- Ingreso de Pasajero -->
    <a href="/funcionario/pasajero" class="block bg-white p-6 rounded-xl shadow hover:shadow-lg transition transform hover:-translate-y-1">
      <div class="text-3xl text-blue-700 mb-2">🧍</div>
      <h3 class="text-lg font-semibold text-gray-800">Ingreso de Pasajero</h3>
      <p class="text-sm text-gray-600">Formulario de ingreso.</p>
    </a>

    <!-- Salida de Pasajero -->
    <a href="/funcionario/salida" class="block bg-white p-6 rounded-xl shadow hover:shadow-lg transition transform hover:-translate-y-1">
      <div class="text-3xl text-green-600 mb-2">🚶‍♂️</div>
      <h3 class="text-lg font-semibold text-gray-800">Salida de Pasajero</h3>
      <p class="text-sm text-gray-600">Formulario de salida.</p>
    </a>

    <!-- Vehículo -->
    <a href="/funcionario/vehiculo" class="block bg-white p-6 rounded-xl shadow hover:shadow-lg transition transform hover:-translate-y-1">
      <div class="text-3xl text-yellow-700 mb-2">🚗</div>
      <h3 class="text-lg font-semibold text-gray-800">Vehículo</h3>
      <p class="text-sm text-gray-600">Ingreso sin integración.</p>
    </a>

    <!-- Mascota -->
    <a href="/funcionario/mascota" class="block bg-white p-6 rounded-xl shadow hover:shadow-lg transition transform hover:-translate-y-1">
      <div class="text-3xl text-green-700 mb-2">🐾</div>
      <h3 class="text-lg font-semibold text-gray-800">Mascota</h3>
      <p class="text-sm text-gray-600">Verificación manual.</p>
    </a>

    <!-- Menor -->
    <a href="/funcionario/menor" class="block bg-white p-6 rounded-xl shadow hover:shadow-lg transition transform hover:-translate-y-1">
      <div class="text-3xl text-purple-600 mb-2">👶</div>
      <h3 class="text-lg font-semibold text-gray-800">Menor</h3>
      <p class="text-sm text-gray-600">Documentos y responsable legal.</p>
    </a>

    <!-- Validaciones Generales -->
    <a href="/funcionario/validaciones" class="block bg-white p-6 rounded-xl shadow hover:shadow-lg transition transform hover:-translate-y-1">
      <div class="text-3xl text-indigo-700 mb-2">🔎</div>
      <h3 class="text-lg font-semibold text-gray-800">Validaciones Automáticas</h3>
      <p class="text-sm text-gray-600">Resultados generales.</p>
    </a>

    <!-- Intervención Manual -->
    <a href="/funcionario/intervencion" class="block bg-white p-6 rounded-xl shadow hover:shadow-lg transition transform hover:-translate-y-1">
      <div class="text-3xl text-red-600 mb-2">🛑</div>
      <h3 class="text-lg font-semibold text-gray-800">Intervención Manual</h3>
      <p class="text-sm text-gray-600">Revisión y corrección de fallos.</p>
    </a>

    <!-- Integración: SAG -->
    <a href="/funcionario/sag" class="block bg-white p-6 rounded-xl shadow hover:shadow-lg transition transform hover:-translate-y-1">
      <div class="text-3xl text-lime-600 mb-2">🌽</div>
      <h3 class="text-lg font-semibold text-gray-800">Integración SAG</h3>
      <p class="text-sm text-gray-600">Declaración de productos agrícolas.</p>
    </a>

    <!-- Integración: PDI -->
    <a href="/funcionario/pdi" class="block bg-white p-6 rounded-xl shadow hover:shadow-lg transition transform hover:-translate-y-1">
      <div class="text-3xl text-cyan-600 mb-2">🛂</div>
      <h3 class="text-lg font-semibold text-gray-800">Integración PDI</h3>
      <p class="text-sm text-gray-600">Validación de antecedentes policiales.</p>
    </a>

    <!-- Integración: Migraciones -->
    <a href="/funcionario/migraciones" class="block bg-white p-6 rounded-xl shadow hover:shadow-lg transition transform hover:-translate-y-1">
      <div class="text-3xl text-pink-600 mb-2">🛬</div>
      <h3 class="text-lg font-semibold text-gray-800">Integración Migraciones</h3>
      <p class="text-sm text-gray-600">Entradas y salidas internacionales.</p>
    </a>

    <!-- Integración: Aduana Argentina -->
    <a href="/funcionario/aduana" class="block bg-white p-6 rounded-xl shadow hover:shadow-lg transition transform hover:-translate-y-1">
      <div class="text-3xl text-orange-600 mb-2">🇦🇷</div>
      <h3 class="text-lg font-semibold text-gray-800">Aduana Argentina</h3>
      <p class="text-sm text-gray-600">Integración binacional.</p>
    </a>
  </section>
</BaseLayout>
